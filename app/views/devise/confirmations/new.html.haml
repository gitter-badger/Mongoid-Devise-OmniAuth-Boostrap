.container
  .sign-up
    .row
      .col-md-3
      .col-md-6
        .form-sign
          %h2.title Resend confirmation instructions
          = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
            = devise_error_messages!
            .form-group 
              = f.label :email
              %br/
              = f.email_field :email, :autofocus => true, placeholder: "Enter email", :type => "email", :class => "form-control"
            %button.btn.btn-primary{type: "submit"} Resend confirmation instructions
          %p
          = render "devise/shared/links"